{
    "manifest_version": 3,
    "name": "YouTube Playback Info",
    "version": "1.0",
    "description": "Adds info overlay to YouTube videos",
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "src/jquery.js",
                "src/overlay.js"
            ]
        }
    ],
    "icons": {
        "16": "assets/logo.png",
        "32": "assets/logo.png",
        "48": "assets/logo.png",
        "128": "assets/logo.png"
    }
}
