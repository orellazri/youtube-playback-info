{
    "manifest_version": 3,
    "name": "YouTube Playback Info",
    "version": "1.1.1",
    "description": "Adds info overlay to YouTube videos",
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "src/overlay.js"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "youtubeplaybackinfo@orellazri.com"
        }
    },
    "icons": {
        "16": "assets/logo.png",
        "32": "assets/logo.png",
        "48": "assets/logo.png",
        "128": "assets/logo.png"
    }
}
